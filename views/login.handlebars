<main class="container container-fluid mt-5">
  <div class="row">
    <div class="col-md-12">
      <div id="post-title">
        <h2 id="title-text">Login</h2>
      </div>

      <form class="form login-form" id="post-content">
        <div class="form-group">
          <label for="username-login" class="form-label">Username</label>
          <input class="form-input" type="text" id="username-login" />
        </div>
        <div class="form-group">
          <label for="password-login" class="form-label" >Password</label>
          <input class="form-input" type="password" id="password-login" />
        </div>
        <div class="form-group">
          <button class="btn" type="submit" id="submit-btn" >Login</button>
        </div>
        <div class="form-group">
          <h4 id="change-text" >Sign Up Instead</h4>
        </div>
      </form>
    </div>
  </div>
</main>

<script src="/js/login.js"></script>